# Backend environment variables for LecteurAide
# Copy this to backend/.env and fill in real credentials

LECTEUR_APP_NAME=LecteurAide Backend
LECTEUR_DATABASE_URL=sqlite:///./lecteur_aide.db

# Google Cloud configuration
LECTEUR_GOOGLE_PROJECT_ID=your_google_project_id
LECTEUR_GOOGLE_LOCATION=global
LECTEUR_VERTEX_LOCATION=us-central1
LECTEUR_GOOGLE_CREDENTIALS_PATH=/absolute/path/to/service-account.json

# Gemini configuration via Vertex AI
LECTEUR_GEMINI_MODEL=gemini-1.5-pro

# Frontend origins allowed to call the API (comma separated list)
CORS_ORIGINS=http://localhost:3000
